{
  "name": "@memory/core",
  "version": "0.1.0",
  "description": "Platform-agnostic memory management for LAMA",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plans/*": {
      "import": "./dist/plans/*.js",
      "types": "./dist/plans/*.d.ts"
    },
    "./services/*": {
      "import": "./dist/services/*.js",
      "types": "./dist/services/*.d.ts"
    },
    "./initialization/*": {
      "import": "./dist/initialization/*.js",
      "types": "./dist/initialization/*.d.ts"
    },
    "./recipes/*": {
      "import": "./dist/recipes/*.js",
      "types": "./dist/recipes/*.d.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "types": "./dist/types/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@refinio/one.core": "*"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "keywords": [
    "memory",
    "chat-memory",
    "lama",
    "one.core"
  ],
  "author": "",
  "license": "MIT"
}
